{
  "$schema": "http://json-schema.org/schema",
  "id": "abacusSchematics",
  "title": "Abacus schematics",
  "type": "object",
  "description": "Create a resource",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the resource",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Resource name (singular, in english) ?"
    },
    "displayName": {
      "type": "string",
      "description": "The name of the resource that will be displayed",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Name of the resource that will be displayed ? In your language"
    },
    "gender": {
      "type": "string",
      "description": "gender of the displayName",
      "uniqueItems": true,
      "items": {
        "type": "string"
      },
      "x-prompt": {
        "message": "Gender ?",
        "type": "list",
        "multiselect": false,
        "items": ["Feminine", "Masculine"]
      }
    }
  },
  "required": ["name", "displayName", "gender"]
}
